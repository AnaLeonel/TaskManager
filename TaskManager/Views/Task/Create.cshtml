@model TaskManager.Models.Task.TaskViewModel

@{
    ViewBag.Title = "Criar Novo Ticket";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Tickets", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3 })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Priority)
        @Html.DropDownListFor(m => m.Priority,
            new SelectList(new[] { "Baixa", "Média", "Alta" }),
            new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Status)
        @Html.DropDownListFor(m => m.Status,
            new SelectList(new[] { "Aberto", "Em Andamento", "Fechado" }),
            new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a href="@Url.Action("Index", "Tickets")" class="btn btn-secondary">Cancelar</a>
}
