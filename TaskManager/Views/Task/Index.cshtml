@model IEnumerable<TaskManager.Models.Task.TaskViewModel>
@{
    ViewBag.Title = "Lista de Tickets";
}
<h2>Lista de Tickets</h2>
<a href="@Url.Action("Create")" class="btn btn-primary">Novo Ticket</a>
<table class="table table-striped mt-4">
    <thead class="thead-dark">
        <tr>
            <th>Título</th>
            <th>Prioridade</th>
            <th>Status</th>
            <th>Data de Abertura</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Priority</td>
                <td>@task.Status</td>
                <td>@task.DateOpened.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Details", new { id = task.Id })" class="btn btn-info">Detalhes</a>
                    <a href="@Url.Action("Edit", new { id = task.Id })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Delete", new { id = task.Id })" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
